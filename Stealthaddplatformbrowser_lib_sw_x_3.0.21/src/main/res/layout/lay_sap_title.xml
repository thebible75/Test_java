<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sap_web_common_color"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/web_common_title_height"
       >
        <RelativeLayout
            android:id="@+id/sap_title_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <View
                android:layout_width="8dp"
                android:layout_height="14.6dp"
                android:background="@drawable/top_back_btn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13.3dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/sap_title_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="14sp"
            />

        <RelativeLayout
            android:id="@+id/sap_title_delete_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            >
            <View
                android:layout_width="15.3dp"
                android:layout_height="18.3dp"
                android:background="@drawable/total_delete_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13.3dp"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
