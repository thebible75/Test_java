<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/sap_web_error_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        >
        <ImageView
            android:layout_width="42.3dp"
            android:layout_height="40dp"
            android:background="@drawable/huvle_logo_sub"/>

        <TextView
            android:id="@+id/sap_web_error_reason_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/cmn_web_error_title"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:textColor="@color/sap_common_dialog_txt"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/sap_web_error_url_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/sap_web_error_title_layout"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="@color/tab_search_setting_title"
        android:text="@string/cmn_web_error_url"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <TextView
        android:id="@+id/sap_web_error_error_code_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/sap_web_error_url_txt"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:textColor="@color/tab_search_setting_title"
        />


</RelativeLayout>
