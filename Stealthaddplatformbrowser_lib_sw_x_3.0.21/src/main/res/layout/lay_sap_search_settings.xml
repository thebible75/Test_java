<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <include
        android:id="@+id/lay_setting_title"
        layout="@layout/lay_sap_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/web_common_title_height" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lay_sap_advanced_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/search_line" />

            <RelativeLayout
                android:id="@+id/lay_setting_notibar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/res_sap_web_long_tab_list_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="26.6dp"
                    android:paddingRight="76.6dp"
                    android:text="@string/sap_display"
                    android:textColor="@color/tab_search_setting_title"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/setting_checkbox_notibar"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26.6dp"
                    android:background="@drawable/res_sap_web_checkbox_selector"
                    android:button="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="13.3dp"
                    android:background="@color/linecolor" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lay_browser_mode"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/res_sap_web_long_tab_list_bg">

                <View
                    android:id="@+id/lay_browser_mode_icon"
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.3dp"
                    android:background="@drawable/set_icon01" />

                <TextView
                    android:id="@+id/lay_borwser_mode_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/lay_browser_mode_icon"
                    android:text="@string/sap_setting_web_view_type"
                    android:textColor="@color/tab_search_setting_title"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_browser_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay_borwser_mode_txt"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/lay_browser_mode_icon"
                    android:text="@string/search_mode_mobile"
                    android:textColor="@color/tab_search_setting_sub_title"
                    android:textSize="10sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/search_line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_down_src"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/res_sap_web_long_tab_list_bg">

                <View
                    android:id="@+id/lay_down_src_icon"
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.3dp"
                    android:background="@drawable/set_icon04" />

                <TextView
                    android:id="@+id/lay_down_src_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/lay_down_src_icon"
                    android:text="@string/sap_setting_download_path"
                    android:textColor="@color/tab_search_setting_title"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_down_src"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay_down_src_txt"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/lay_down_src_icon"
                    android:text="@string/search_down"
                    android:textColor="@color/tab_search_setting_sub_title"
                    android:textSize="10sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/search_line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_homepage"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/res_sap_web_long_tab_list_bg">

                <View
                    android:id="@+id/lay_homepage_icon"
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.3dp"
                    android:background="@drawable/set_icon05" />

                <TextView
                    android:id="@+id/lay_homepage_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/lay_homepage_icon"
                    android:text="@string/sap_setting_home"
                    android:textColor="@color/tab_search_setting_title"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay_homepage_txt"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/lay_homepage_icon"
                    android:text="@string/search_homepage_huvle"
                    android:textColor="@color/tab_search_setting_sub_title"
                    android:textSize="10sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/search_line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_search_engine"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/res_sap_web_long_tab_list_bg">

                <View
                    android:id="@+id/lay_search_engine_icon"
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.3dp"
                    android:background="@drawable/set_icon06" />

                <TextView
                    android:id="@+id/lay_search_engine_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/lay_search_engine_icon"
                    android:text="@string/sap_setting_search"
                    android:textColor="@color/tab_search_setting_title"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_search_engine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay_search_engine_txt"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/lay_search_engine_icon"
                    android:text="@string/search_engine_google"
                    android:textColor="@color/tab_search_setting_sub_title"
                    android:textSize="10sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/search_line" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lay_advanced"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/res_sap_web_long_tab_list_bg">

                <View
                    android:id="@+id/lay_advanced_icon"
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.3dp"
                    android:background="@drawable/set_icon07" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.3dp"
                    android:layout_toRightOf="@id/lay_advanced_icon"
                    android:text="@string/advanced"
                    android:textColor="@color/tab_search_setting_title"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/search_line" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
