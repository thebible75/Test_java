<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="SapLightTheme" parent="android:Theme.Holo.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="sap_attr_progressColor">@color/gray_medium</item>
        <item name="sap_attr_arrowBackDrawable">@drawable/res_sap_ic_action_back</item>
        <item name="sap_attr_numberColor">@color/gray_dark</item>
        <item name="sap_attr_autoCompleteTitleColor">@color/black</item>
        <item name="sap_attr_autoCompleteUrlColor">@color/gray_medium</item>
        <item name="sap_attr_arrowForwardDrawable">@drawable/res_sap_ic_action_forward</item>
        <item name="android:itemBackground">@drawable/menu_bg_selector</item>
        <item name="android:itemTextAppearance">@style/menuText</item>
        <item name="android:actionBarStyle">@style/SapLightActionBar</item>
    </style>

    <style name="SapDarkTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="sap_attr_progressColor">@color/gray_extra_dark</item>
        <item name="sap_attr_numberColor">@color/gray_light</item>
        <item name="sap_attr_autoCompleteTitleColor">@color/white</item>
        <item name="sap_attr_autoCompleteUrlColor">@color/gray_light</item>
        <item name="android:itemBackground">@drawable/menu_dark_bg_selector</item>
        <item name="android:itemTextAppearance">@style/menuDarkText</item>
        <item name="android:actionBarStyle">@style/SapDarkActionBar</item>
    </style>

    <style name="SapDarkActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/sap_web_incognito_common_color</item>
    </style>

    <style name="SapLightActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="menuText" >
        <item name="android:textColor">@color/sap_web_menu_txt_color</item>
        <item name="android:textSize">@dimen/sap_menu_textSize</item>
    </style>

    <style name="menuDarkText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sap_menu_textSize</item>
    </style>
    
    <style name="boldText" >
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="normalText" >
        <item name="android:textStyle">normal</item>
    </style>

    <style name="browser_util_style">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:animation">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>