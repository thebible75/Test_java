<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/sap_web_common_dev_line"
     >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_box"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        >
        <EditText
            android:id="@+id/web_page_search_edit"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:hint="@string/menu_pagesearch"
            android:layout_toLeftOf="@+id/web_page_search_layout"
            android:background="@null"
            android:inputType="text"
            android:textColor="@color/sap_web_common_text_title_color"
            android:imeOptions="actionDone"
            android:lines="1"
            />
        <RelativeLayout
            android:id="@+id/web_page_search_layout"
            android:layout_alignParentRight="true"
            android:layout_width="158dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/web_page_search_btn_layout"
                android:layout_width="91dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/web_page_search_result_layout"
                >
                <RelativeLayout
                    android:id="@+id/web_page_search_up_btn"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    >
                    <View
                        android:layout_width="14.6dp"
                        android:layout_height="8dp"
                        android:background="@drawable/search_up_btn"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:background="#dedede"
                    android:layout_gravity="center_vertical"
                    />
                <RelativeLayout
                    android:id="@+id/web_page_search_down_btn"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    >
                    <View
                        android:layout_width="14.6dp"
                        android:layout_height="8dp"
                        android:background="@drawable/search_down_btn"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/web_page_search_result_layout"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/web_page_search_result_txt"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/sap_common_dialog_txt"
                    android:lines="1"
                    android:gravity="center"
                    android:text="0/0"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:background="#dedede"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/web_page_search_result_cancel_btn"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/sap_common_dialog_txt"
                    android:text="@string/cmn_action_cancel"
                    android:lines="1"
                    android:gravity="center"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>