<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:id="@+id/sap_radio_top_layout"
            android:layout_width="230dp"
            android:layout_height="220dp"
            android:background="@drawable/popup_bg02"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sap_radio_list_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/action_new_tab"
                android:textColor="@color/sap_web_common_color"
                android:gravity="center"
                android:textSize="14sp" />

            <ListView
                android:id="@+id/sap_radio_list_view"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:dividerHeight="0dp"
                android:divider="#00000000"
                /><!--android:layout_height="140dp"-->
        </LinearLayout>
        <Button
            android:id="@+id/sap_radio_positive_btn"
            android:layout_width="230dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sap_radio_top_layout"
            android:background="@drawable/popup_btn"
            android:text="@string/cmn_action_ok"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            />

    </RelativeLayout>




</RelativeLayout>