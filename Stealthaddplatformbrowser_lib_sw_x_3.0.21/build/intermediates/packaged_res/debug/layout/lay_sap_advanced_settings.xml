                    android:textColor="@color/tab_search_setting_title"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/advanced_checkbox_start_tab"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
