    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include
        android:id="@+id/lay_sap_advanced_title"
        layout="@layout/lay_sap_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/web_common_title_height" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lay_sap_advanced_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <RelativeLayout
                android:id="@+id/advanced_del_temp_file_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/res_sap_web_long_tab_list_bg">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="13.3dp"
                    android:background="@color/linecolor" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="26.6dp"
                    android:paddingRight="76.6dp"
                    android:text="@string/cache"
                    android:textColor="@color/tab_search_setting_title"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/advanced_checkbox_de_temp_file"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26.6dp"
                    android:background="@drawable/res_sap_web_checkbox_selector"
                    android:button="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="13.3dp"
                    android:background="@color/linecolor" />
            </RelativeLayout>

            <RelativeLayout
