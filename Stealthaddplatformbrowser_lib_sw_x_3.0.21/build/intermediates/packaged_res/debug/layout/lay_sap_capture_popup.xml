<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sap_capture_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/res_sap_web_long_tab_list_bg"
            android:gravity="center"
            android:lineSpacingExtra="7dp"
            android:paddingLeft="13.3dp"
            android:paddingRight="10dp"
            android:text="@string/menu_capture"
            android:textColor="@color/sap_web_common_color"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/sap_capture_current"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/res_sap_web_long_tab_list_bg"
            android:gravity="left|center_vertical"
            android:lineSpacingExtra="7dp"
            android:paddingLeft="13.3dp"
            android:paddingRight="10dp"
            android:text="@string/capture_view"
            android:textColor="@color/sap_common_dialog_txt"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sap_capture_all"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/res_sap_web_long_tab_list_bg"
            android:gravity="left|center_vertical"
            android:lineSpacingExtra="7dp"
            android:paddingLeft="13.3dp"
            android:paddingRight="10dp"
            android:text="@string/capture_all"
            android:textColor="@color/sap_common_dialog_txt"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>